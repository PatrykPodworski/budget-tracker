{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  }
}
